<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_operator_search" model="ir.ui.view">
        <field name="name">view.stock.picking.operator.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Operator" name="operator" domain="[]" context="{'group_by':'operator_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_picking_operator_tree" model="ir.ui.view">
        <field name="name">view.stock.picking.operator.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="operator_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_picking_operator_form" model="ir.ui.view">
        <field name="name">view.stock.picking.operator.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[1]" position="before">
                <button name="assign_operator" string="Start" type="object"
                    attrs="{'invisible': ['|', ('state', 'not in', ['assigned','partially_available']), ('operator_id', '!=', False)]}" class="oe_highlight"/>
            </xpath>

            <xpath expr="//field[@name='scheduled_date']" position="before">
                <field name="operator_id"/>
            </xpath>
        </field>
    </record>
</odoo>
